<!DOCTYPE html>
<html>
	<body>
	<div id="errors">
{if ISSET($LOG_messages)}
	{foreach from=$LOG_messages item=line}
		{if $line->level() == 7}
			<div style="color: gray;">{$line->message()}</div>
		{elseif  $line->level() == 6}
			<div style="color: black;">{$line->message()}</div>
		{elseif  $line->level() == 5}
			<div class="ui-widget">
				<div class="ui-state-highlight ui-corner-all" style="margin-top: 20px; padding: 0 .7em;"> 
					<p><span class="ui-icon ui-icon-info" style="float: left; margin-right: .3em;"></span>
					{$line->message()}</p>
				</div>
	
			</div>
			<div style="color: blue;"></div>
		{elseif  $line->level() == 3}
			<div class="ui-widget">
				<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;"> 
					<p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span> 
					<strong></strong>{$line->message()}</p>
				</div>
			</div>
		{elseif  $line->level() == 1}
			<div class="ui-widget">
				<div class="ui-state-error ui-corner-all" style="padding: 0 .7em;"> 
					<p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span> 
					<strong></strong>{$line->message()}</p>
				</div>
			</div>
		{/if}
	{/foreach}
{/if}
	</div>
	<div id="content">
	{foreach from=$TPL_ajax_modules item=module}
			{include file=$module}
	{/foreach}
	</div>
	</body>
</html>
